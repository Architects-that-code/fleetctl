{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/schemas/fleetctl.schema.json",
  "title": "FleetCTL Configuration",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "kind": {
      "type": "string",
      "const": "FleetConfig",
      "description": "Configuration kind identifier and version gate"
    },
    "metadata": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "name"
      ],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Human-readable name for the fleet"
        }
      }
    },
    "spec": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "compartmentId",
        "imageId",
        "shape",
        "subnetId",
        "instances"
      ],
      "properties": {
        "compartmentId": {
          "type": "string",
          "minLength": 1,
          "description": "OCI Compartment OCID"
        },
        "imageId": {
          "type": "string",
          "minLength": 1,
          "description": "OCI Image OCID used to create instances"
        },
        "availabilityDomain": {
          "type": "string",
          "description": "Availability domain (e.g., PHX-AD-1)"
        },
        "shape": {
          "type": "string",
          "minLength": 1,
          "description": "Compute shape (e.g., VM.Standard.E2.1.Micro or VM.Standard.E5.Flex)"
        },
        "shapeConfig": {
          "type": "object",
          "description": "Required when using flexible shapes (e.g., VM.Standard.*.Flex)",
          "additionalProperties": false,
          "properties": {
            "ocpus": {
              "type": "number",
              "minimum": 0.25,
              "description": "Number of OCPUs for Flex shapes"
            },
            "memoryInGBs": {
              "type": "number",
              "minimum": 1,
              "description": "Memory in GB for Flex shapes"
            }
          },
          "required": [
            "ocpus",
            "memoryInGBs"
          ]
        },
        "subnetId": {
          "type": "string",
          "minLength": 1,
          "description": "OCID of the subnet for the primary VNIC"
        },
        "displayNamePrefix": {
          "type": "string",
          "description": "Optional prefix for instance display names (default: <fleet>-<group>)"
        },
        "auth": {
          "type": "object",
          "additionalProperties": false,
          "description": "Authentication method for OCI SDK",
          "properties": {
            "method": {
              "type": "string",
              "enum": [
                "user",
                "instance"
              ],
              "default": "instance",
              "description": "Auth method: 'user' (OCI config file) or 'instance' (instance principal)"
            },
            "configFile": {
              "type": "string",
              "description": "Path to OCI CLI config file (e.g., ~/.oci/config) when method=user"
            },
            "profile": {
              "type": "string",
              "default": "DEFAULT",
              "description": "Profile name in OCI CLI config when method=user"
            },
            "region": {
              "type": "string",
              "description": "Region override (e.g., us-phoenix-1). If omitted, provider/OCI_REGION is used."
            }
          }
        },
        "definedTags": {
          "type": "object",
          "description": "Defined (namespace) tags to attach",
          "additionalProperties": {
            "type": "string"
          }
        },
        "freeformTags": {
          "type": "object",
          "description": "Freeform tags to attach",
          "additionalProperties": {
            "type": "string"
          }
        },
        "instances": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "name",
              "count"
            ],
            "properties": {
              "name": {
                "type": "string",
                "minLength": 1,
                "description": "Logical group name"
              },
              "count": {
                "type": "integer",
                "minimum": 0,
                "description": "Desired count for this group"
              },
              "subnetId": {
                "type": "string",
                "description": "Optional per-group subnet override; defaults to spec.subnetId"
              }
            }
          }
        }
      }
    }
  },
  "required": [
    "kind",
    "metadata",
    "spec"
  ]
}
